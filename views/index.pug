          .address
            span 地址：宜蘭縣冬山鄉武淵村(三)路116號
            span 傳真：03-9509677

include ./components/script.pug
script.

  if($(window).width() < 641){
    $('.logo img').attr('src','/images/logo-s.png');
    $('.gobtn a').addClass('whitearrow');
  }


  $('#bannerSlider').bxSlider({
    mode:'fade',
    controls:false,
    pager:false,
    auto:true,
    touchEnabled:false
  });

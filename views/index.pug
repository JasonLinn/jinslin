html(lang="en")
    head
        include ./components/head.pug

    body
      #page-index
        .greetbox
          .logo
            img(src="/images/logo-o.png" class="rwd-img")
          h1.title
            span 溫馨服務情
            span 窩心衿日林
          .gobtn
            a(href="about") 進入網站
          .iconbox
            ul
              li
                a
                  .icon
                    img(src="images/icon/lodging.png" class="rwd-img" alt="宜蘭縣民宿0070號")
                  .name 宜蘭縣民宿0070號
              li
                a
                  .icon
                    img(src="images/icon/countrycard.png" class="rwd-img" alt="國民旅遊卡特約民宿")
